#include <iostream>
using namespace std;
class Complex {
    float real, imag;
public:
    void setComplex(float r, float i) {
        real = r;
        imag = i;
    }
    void displayComplex() {
        cout << real << " + " << imag << "i\n";
    }
    Complex add(Complex c) {
        Complex temp;
        temp.real = real + c.real;
        temp.imag = imag + c.imag;
        return temp;
    }
};
int main() {
    cout<<"Soham Sachdeva(1024150035)"<<endl;
    Complex c1, c2, sum;
    c1.setComplex(2, 5);
    c2.setComplex(4, 6);
    sum = c1.add(c2);
    sum.displayComplex();
}
